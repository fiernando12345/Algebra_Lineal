<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Numeros_Complejos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numeros Complejos"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operaciones Básicas con Numeros Complejos"
            android:textAllCaps="false"
            android:onClick="OBNC"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potencias de i"
            android:textAllCaps="false"
            android:onClick="Pi"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Módulo de un Numero Complejo"
            android:textAllCaps="false"
            android:onClick="MNC"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversiones (Rectangular - Polar - Exponencial)"
            android:textAllCaps="false"
            android:onClick="CRPE"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operaciones en forma Polar"
            android:textAllCaps="false"
            android:onClick="OFP"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potencias y Raíz de Numeros Complejos"
            android:textAllCaps="false"
            android:onClick="PRNC"/>

    </LinearLayout>

    </ScrollView>
</FrameLayout>