<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operaciones_Forma_Polar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:text="Z1=" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8mm"
                    android:text="["/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:text="r=" />
                <EditText
                    android:id="@+id/Z1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="#" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:layout_marginLeft="1mm"
                    android:text="θ=" />
                <EditText
                    android:id="@+id/Z1i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="#" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8mm"
                    android:text="°]"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="6mm"
                    android:layout_margin="2mm"
                    android:text="Operación:"/>

                <Spinner
                    android:id="@+id/spnOperacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:text="Z2=" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8mm"
                    android:text="["/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:text="r=" />
                <EditText
                    android:id="@+id/Z2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="#" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:layout_marginLeft="1mm"
                    android:text="θ=" />
                <EditText
                    android:id="@+id/Z2i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7mm"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="#" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8mm"
                    android:text="°]"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8mm"
                android:layout_margin="4mm"
                android:text="="/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtResultado"
                android:hint="Resultado"
                android:textAlignment="center"
                android:layout_margin="2mm"
                android:background="#64d4b8"
                android:enabled="false"
                android:textColor="#000000"
                android:textColorHint="#878787"
                android:textSize="5mm"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>